@page
@{
    ViewData["Title"] = "Server Error";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="margin-top: -100px;">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 fw-bold text-danger">500</span>
        </div>
        <h1 class="display-5 fw-bold mb-3">Internal Server Error</h1>
        <p class="lead text-muted mb-4">
            Something went wrong on our end. Our team has been notified.
            <br />Please try again later or contact support if the problem persists.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <button onclick="location.reload()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-clockwise me-2"></i>Try Again
            </button>
        </div>

        <div class="mt-5">
            <div class="alert alert-danger d-inline-block">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <small>Error reference: @DateTime.Now.Ticks</small>
            </div>
        </div>
    </div>
</div>
