@page
@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="margin-top: -100px;">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 fw-bold text-warning">403</span>
        </div>
        <h1 class="display-5 fw-bold mb-3">Access Denied</h1>
        <p class="lead text-muted mb-4">
            You don't have permission to access this resource.
            <br />Please log in with appropriate credentials or contact your administrator.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <a href="/Login" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </a>
        </div>

        <div class="mt-5">
            <div class="alert alert-light d-inline-block">
                <i class="bi bi-info-circle me-2"></i>
                <small>If you should have access, please contact support.</small>
            </div>
        </div>
    </div>
</div>
