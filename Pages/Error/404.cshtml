@page
@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="margin-top: -100px;">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 fw-bold text-primary">404</span>
        </div>
        <h1 class="display-5 fw-bold mb-3">Page Not Found</h1>
        <p class="lead text-muted mb-4">
            The page you're looking for doesn't exist or has been moved.
            <br />Please check the URL or navigate back to our homepage.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <a href="/Login" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </a>
        </div>

        <div class="mt-5 text-muted">
            <small>If you believe this is an error, please contact support.</small>
        </div>
    </div>
</div>
