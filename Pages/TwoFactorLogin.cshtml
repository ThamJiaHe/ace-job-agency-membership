@page
@model AceJobAgency.Pages.TwoFactorLoginModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h1>Two-Factor Authentication</h1>
            <p>Enter the 6-digit code from your authenticator app</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert-box error">
                <i class="bi bi-exclamation-circle me-2"></i>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form id="authenticator-form" method="post" asp-route-rememberMe="@Model.RememberMe" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="form-group">
                <label asp-for="Input.TwoFactorCode" class="form-label">Authenticator Code</label>
                <input asp-for="Input.TwoFactorCode"
                       class="form-control code-input"
                       placeholder="000000"
                       maxlength="6"
                       autocomplete="one-time-code"
                       inputmode="numeric"
                       autofocus />
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
            </div>

            <div class="form-group checkbox-group">
                <input asp-for="Input.RememberMachine" class="form-check-input" />
                <label asp-for="Input.RememberMachine" class="form-check-label">
                    Remember this device for 30 days
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                <i class="bi bi-check-circle me-2"></i>Verify
            </button>
        </form>

        <div class="divider">
            <span>or</span>
        </div>

        <form id="recovery-form" method="post" asp-page-handler="UseRecoveryCode" asp-route-rememberMe="@Model.RememberMe" asp-route-returnUrl="@Model.ReturnUrl">
            <input type="hidden" asp-for="Input.TwoFactorCode" id="recovery-code-input" />
            <button type="button" class="btn btn-outline-secondary btn-block" onclick="toggleRecoveryMode()">
                <i class="bi bi-key me-2"></i>Use a Recovery Code
            </button>
        </form>

        <div class="form-footer">
            <a href="/Login" class="back-link">
                <i class="bi bi-arrow-left me-1"></i>Back to Login
            </a>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .auth-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 2.5rem;
        width: 100%;
        max-width: 420px;
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-icon {
        width: 64px;
        height: 64px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }

    .auth-icon i {
        font-size: 1.75rem;
        color: white;
    }

    .auth-header h1 {
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .auth-header p {
        color: #666;
        font-size: 0.9rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #333;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e1e5eb;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .code-input {
        text-align: center;
        font-size: 1.75rem;
        letter-spacing: 8px;
        font-family: 'Courier New', monospace;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .form-check-label {
        color: #666;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        font-size: 1rem;
    }

    .btn-block {
        width: 100%;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-outline-secondary {
        background: transparent;
        border: 2px solid #6c757d;
        color: #6c757d;
    }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: #e1e5eb;
    }

    .divider span {
        padding: 0 1rem;
        color: #999;
        font-size: 0.85rem;
    }

    .alert-box {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .alert-box.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-box ul {
        margin: 0;
        padding-left: 1rem;
        list-style: none;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }

    .form-footer {
        text-align: center;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e1e5eb;
    }

    .back-link {
        color: #667eea;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<script>
    function toggleRecoveryMode() {
        const authenticatorForm = document.getElementById('authenticator-form');
        const recoveryForm = document.getElementById('recovery-form');
        const codeInput = document.querySelector('.code-input');
        const recoveryInput = document.getElementById('recovery-code-input');

        // Copy value to recovery form and submit
        const code = prompt("Enter your recovery code:");
        if (code) {
            recoveryInput.value = code;
            recoveryForm.submit();
        }
    }

    // Auto-submit when 6 digits are entered
    document.querySelector('.code-input').addEventListener('input', function(e) {
        // Only allow digits
        this.value = this.value.replace(/[^0-9]/g, '');

        if (this.value.length === 6) {
            // Optional: Auto-submit after small delay
            // document.getElementById('authenticator-form').submit();
        }
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
