@page
@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="margin-top: -100px;">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-shield-lock-fill text-warning" style="font-size: 5rem;"></i>
        </div>
        <h1 class="display-4 fw-bold mb-3">Access Denied</h1>
        <p class="lead text-muted mb-4">
            You don't have permission to access this page.
            <br />Please log in with an authorized account.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <a href="/Login" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login
            </a>
        </div>
    </div>
</div>
