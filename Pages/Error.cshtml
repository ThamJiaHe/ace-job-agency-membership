@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="margin-top: -100px;">
    <div class="text-center">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
        </div>
        <h1 class="display-4 fw-bold text-danger mb-3">Oops! Something went wrong</h1>
        <p class="lead text-muted mb-4">
            We encountered an unexpected error while processing your request.
            <br />Please try again later or contact support if the problem persists.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted small mb-4">
                <strong>Reference ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door me-2"></i>Go Home
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
